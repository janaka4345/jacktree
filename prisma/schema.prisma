// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  role     Role     @default(USER)
  name     String?
  address  Address?
}

type Address {
  street String
  city   String
  state  String
  zip    String
}

enum Role {
  ADMIN
  USER
  SELLER
}
